<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.giap.shopoline.models.TblChitietdonhangEntity" table="tbl_chitietdonhang" schema="dbo"
           catalog="QuanLiDT">
        <composite-id mapped="true" class="com.giap.shopoline.models.TblChitietdonhangEntityPK">
            <key-property name="idDondathang">
                <column name="id_dondathang" sql-type="int"/>
            </key-property>
            <key-property name="idSanpham">
                <column name="id_sanpham" sql-type="int"/>
            </key-property>
        </composite-id>
        <property name="soluong">
            <column name="soluong" sql-type="int" not-null="true"/>
        </property>
        <property name="gia">
            <column name="gia" sql-type="decimal(18)" precision="18" not-null="true"/>
        </property>
        <many-to-one name="tblDondathangByIdDondathang" class="com.giap.shopoline.models.TblDondathangEntity">
            <column name="id_dondathang"/>
        </many-to-one>
        <many-to-one name="tblSanphamByIdSanpham" class="com.giap.shopoline.models.TblSanphamEntity">
            <column name="id_sanpham"/>
        </many-to-one>
    </class>
</hibernate-mapping>